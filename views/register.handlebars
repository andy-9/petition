<form method="POST" id="registerfields">
    <div id="fourfields">
        <input id="first" name="first" placeholder="enter first name" type="text" autocomplete="off" />
        <input id="last" name="last" placeholder="enter last name" type="text" autocomplete="off" />
        <input id="email-register" name="email" placeholder="enter email address" type="text" autocomplete="off" />
        <input id="password-register" name="password" placeholder="enter password" type="text" autocomplete="off" />
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
    </div>
    <button id="register-button">register</button>
</form>

