<form method="POST" id="registerfields">
    <div id="fourfields">

        <label for="first">First name</label>
        <input name="first" type="text" placeholder="e.g. Jane" autocomplete="off">

        <label for="last">Last name</label>
        <input name="last" type="text" placeholder="e.g. Doe" autocomplete="off">

        <label for="email">Email</label>
        <input name="email" type="email" autocomplete="off" placeholder="e.g. jane@doe.org" >

        <label for="pass">Password (8 characters minimum)</label>
        <input name="password" type="password" minlength="8" required placeholder="e.g. X8kF3da#VÂ§d" autocomplete="off">

        <input type="hidden" name="_csrf" value="{{csrfToken}}">
    </div>

    <button id="register-button">register</button>

</form>

